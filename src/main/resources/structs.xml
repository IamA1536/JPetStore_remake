<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="JPetStore" extends="structs-default">
        <action name="loginForm" class="org.teamwork.jpetstore.action.AccountAction">
            <result name="input">/WEB-INF/jsp/account/Login.jsp</result>
        </action>
        <action name="login" class="org.teamwork.jpetstore.action.AccountAction">
            <result name="input">/WEB-INF/jsp/account/Login.jsp</result>
            <result name="success">/WEB-INF/jsp/catalog/Main.jsp</result>
        </action>
    </package>
</struts>